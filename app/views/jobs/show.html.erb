<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<div class="container">
    <div class="panel-body col-md-4 pull-right">
      <div id="map" class="map_container">
        <script>
        handler = Gmaps.build('Google');
        handler.buildMap({ provider: {maxZoom: 14}, internal: {id: 'map'}}, function(){
          markers = handler.addMarkers(<%=raw @hash.to_json %>);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
        });
        </script>
      </div>
    <%= form_tag jobs_path, :method => :get do %>
    <div class="pull-right">
      <div class="input-group input-group-md">
        <%= text_field_tag :search, params[:search], placeholder: "search by city", class: "form-control" %>
          <span class="input-group-btn"><%= submit_tag "Change location", name: nil, class: "btn btn-default" %></span>
        <% end %>
      </div>
    </div>
  </div>
  <div class="h1-title">
    <h1>Startup Jobs in <%= @location.display_name %></h1>
  </div>
  <div class="col-md-8">
    <% @locations.each do |location| %>
      <% location.jobs.each do |job| %>
          <%= link_to image_tag(job.startup.thumb_url), "#{job.startup.url}", target: "_blank", class: "thumbnail" %>
          <ul class="startup-list">
            <li><h2 class="h2-li"><%= job.startup.name %> <span CLASS="title-h2">(<%= job.job_type %>)</span></h2></li>
            <li><strong>Job title:</strong> <%= job.title.truncate_words(10) %></li>
            <% if job.salary_max && job.salary_min != nil && job.salary_max && job.salary_min != 0 %>
              <li><strong>Salary: </strong>$<%= job.salary_min %> - $<%= job.salary_max %></li>
            <% end %>
            <li><%= link_to "Details", job.al_url %> | <%= link_to "Website", job.startup.url, target: "_blank" %></li>
          </ul>
        <hr>
      <% end %>
    </div>
  <% end %>
</div>










